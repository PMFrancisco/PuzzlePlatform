function initPlatform(platData) {
  const numRows = 9;
  const numCols = 16;
  const platforms = [];

  for (let i = 0; i < numRows; i++) {
    const rows = platData.slice(i * numCols, (i + 1) * numCols);
    rows.forEach((block, xIndex) => {
      if (block === 292) {
        platforms.push(new Wall(xIndex * 64, i * 64, 64, 12));
      }
    });
  }

  return platforms;
}
